<Window x:Class="PixelGraph.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelGraph.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#333">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Name="FileNewMenuItem" Header="_New" Click="FileNewMenuItem_OnClick" />
                    <MenuItem Name="FileOpenMenuItem" Header="_Open" />
                    <MenuItem Name="FileCloseMenuItem" Header="_Close" />
                    <Separator />
                    <MenuItem Name="FileExitMenuItem"  Header="_Exit" Click="FileExitMenuItem_OnClick" />
                </MenuItem>
            </Menu>
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBlock Name="StatusLabel" Text="Ready" />
                </StatusBarItem>
                <StatusBarItem Width="90">
                    <ProgressBar Name="StatusProgress" />
                </StatusBarItem>
            </StatusBar>
            <TextBox AcceptsReturn="True" />
        </DockPanel>
    </Grid>
</Window>
