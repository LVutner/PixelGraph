<Window x:Class="PixelGraph.UI.Windows.ImportPackWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:vm="clr-namespace:PixelGraph.UI.ViewModels"
                    xmlns:controls="clr-namespace:PixelGraph.UI.Controls"
                    xmlns:vd="clr-namespace:PixelGraph.UI.ViewData"
                    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    xmlns:converters="clr-namespace:PixelGraph.UI.Converters"
                    Title="Import Resource Pack" Width="800" Height="450" mc:Ignorable="d"
                    d:DataContext="{d:DesignInstance vm:ImportPackDesignVM, IsDesignTimeCreatable=True}"
                    WindowStartupLocation="CenterOwner" Loaded="OnWindowLoaded" Closed="OnWindowClosed">
    <Window.Resources>
        <vd:OptionalEncodingFormatValues x:Key="Formats"/>
        <converters:VisibilityConverter x:Key="VisibilityConverter"/>
        <converters:VisibilityInverseConverter x:Key="VisibilityInverseConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:ImportPackVM x:Name="VM"/>
    </Window.DataContext>
    <DockPanel>
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Content="Import" Margin="4" HorizontalAlignment="Right" Click="OnImportClick"
                    IsEnabled="{Binding IsReady, Mode=OneWay}"
                    Visibility="{Binding ShowLog, Mode=OneWay, Converter={StaticResource VisibilityInverseConverter}}"/>
            <Button Grid.Column="1" Content="Cancel" Margin="4" HorizontalAlignment="Right" Click="OnCancelClick"
                    IsEnabled="{Binding IsActive, Mode=OneWay, Converter={StaticResource VisibilityConverter}}"
                    Visibility="{Binding ShowLog, Mode=OneWay, Converter={StaticResource VisibilityConverter}}"/>
        </Grid>
        <Grid>
            <DockPanel
                Visibility="{Binding ShowLog, Mode=OneWay, Converter={StaticResource VisibilityInverseConverter}}">
                <TextBox DockPanel.Dock="Top" IsReadOnly="True" Text="{Binding ImportSource, Mode=OneWay}" Padding="2,0" FontFamily="Consolas" Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="240"/>
                        <ColumnDefinition Width="3"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical" Margin="4">
                        <TextBlock Text="Source Format" FontSize="10" Padding="4,6,4,0"/>
                        <DockPanel>
                            <Button DockPanel.Dock="Right" Padding="2,0,2,0" ToolTip="Edit Encoding" Height="20"
                                    Content="{iconPacks:FontAwesome Kind=EditSolid}"/>
                            <ComboBox DisplayMemberPath="Text" SelectedValuePath="Value"
                                      ItemsSource="{StaticResource Formats}"
                                      SelectedValue="{Binding SourceFormat, Mode=TwoWay}" Padding="4,2" Margin="0,0,4,0"/>
                        </DockPanel>
                    </StackPanel>
                    <GridSplitter Grid.Column="1" Background="{DynamicResource MaterialDesignDarkForeground}" ResizeBehavior="PreviousAndNext" ResizeDirection="Columns" ShowsPreview="True" HorizontalAlignment="Stretch"/>
                    <TreeView Grid.Column="2" ItemsSource="{Binding RootNode.Nodes, Mode=OneWay}">
                        <TreeView.Resources>
                            <DataTemplate DataType="{x:Type vm:ImportTreeFile}">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:FontAwesome Kind="FileSolid"/>
                                    <TextBlock Margin="4,0,0,0" Text="{Binding Name, Mode=OneWay}"/>
                                </StackPanel>
                            </DataTemplate>
                            <HierarchicalDataTemplate DataType="{x:Type vm:ImportTreeDirectory}" ItemsSource="{Binding Nodes}">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:FontAwesome Kind="FolderSolid"/>
                                    <TextBlock Margin="4,0,0,0" Text="{Binding Name}"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.Resources>
                    </TreeView>
                </Grid>
            </DockPanel>
            <controls:LogListControl x:Name="LogList"
                Visibility="{Binding ShowLog, Mode=OneWay, Converter={StaticResource VisibilityConverter}}"
                Log="{Binding LogList, Mode=OneWay}"/>
        </Grid>
    </DockPanel>
</Window>
