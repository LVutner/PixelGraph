<Window x:Class="PixelGraph.UI.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelGraph.UI.Windows"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800" WindowStartupLocation="CenterOwner">
    <Grid>
        <ItemsControl>
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type local:TestRow}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.ColumnSpan="2" Background="Black" BorderThickness="0,0,0,1" BorderBrush="#111"/>
                        <TextBlock Grid.Column="0" Margin="4,2" Foreground="White" VerticalAlignment="Center"
                                   Text="{Binding Header, Mode=OneTime}"/>
                        <ContentPresenter Grid.Column="1"
                                          Content="{Binding Content, Mode=OneTime}"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.Items>
                <local:TestRow Header="Test #1">
                    <CheckBox HorizontalAlignment="Center"/>
                </local:TestRow>
                <local:TestRow Header="Test #2">
                    <TextBox/>
                </local:TestRow>
            </ItemsControl.Items>
        </ItemsControl>
    </Grid>
</Window>
